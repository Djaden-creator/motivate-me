{% extends 'base.html.twig' %}

{% block title %}Edit your post{% endblock %}

{% block body %}
    <div class="container col-xl-10 col-xxl-8 px-4 py-5">
        <div class="row g-lg-5 py-5">
            <div class="col-lg-7 text-center text-lg-start">
                <div class="">
					{% for share in share %}
						<div class="col mb-3 lh-1 text-body-emphasis">
							
							{{share.id}}
						</div>
                        {% else %}
                            no post here 
					{% endfor %}
				</div>
            </div>
            <div class="col-md-10 mx-auto col-lg-5">
            {{ form_start(form,{
                attr: { 
                    'novalidate': 'novalidate',
                    'class': 'p-4 p-md-5 border rounded-3 bg-body-tertiary codegenerator', 
                    } 
                }) }}
                <strong class="successmessage text-success"></strong>
                <strong class="errorhere text-danger"></strong>
              <div class="form-floating mb-3">
                {{ form_widget(form.description) }}
                <label for="floatingInput">New code entry</label>
              </div>        
              {{ form_widget(form.image) }}
              <button type="submit" class="btn btn-bd-primary"> edit</button>
              <hr class="my-4">
              <small class="text-body-secondary">By clicking Sign up, you agree to the terms of use.</small>
            {{ form_end(form) }}
            </div>
        </div>
    </div>    
{% endblock %}
{% block javascripts %} 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.7.7/axios.min.js"></script>
   <!-- Bootstrap core JavaScript -->
    
   <script> 
    // here to contact us team motivate me
    $(document).ready(function(){
       $('.codegenerator').on('submit',function(event){
           event.preventDefault();

             $.ajax({
                 url: $(this).attr('action'),
				 type: 'POST',
				 data: $(this).serialize(),
                 
                 success: function (response) {
                    
					 $('.successmessage').html(response.message);
                     $('.codegenerator')[0].reset();
                     setTimeout(function(){ $('.successmessage').html(''); }, 4000);
                 },
                 error: function (xhr) {
                    let errorMessage = xhr.responseJSON.errors;
					 $('.errorhere').html(errorMessage);
                     setTimeout(function(){ $('.errorhere').html(''); }, 10000);
                 }
             });
         
        })
        })
   </script>
{% endblock %}
