{% for result in results %}
    <li class="p-2 border-bottom">
	<a href="{{ path('app_chat',{'id':result.id }) }}" class="d-flex justify-content-between text-muted" style="text-decoration: none;">
		<div class="d-flex flex-row">
			<div>
				<img src="{{ asset(result.getImagepath) }}" alt="avatar" class="d-flex align-self-center me-3" width="40" height="40" style="object-fit:cover;border-radius:20px;border:2px solid black">
				<span class="badge bg-success badge-dot"></span>
			</div>
			<div class="pt-1">
				<p class="fw-bold mb-0">{{ result.username }}</p>
				<p class="small text-muted">you are following this motivator and he  is ready to chat with you !</p>
			</div>
		</div>
		<div class="pt-1">
			<p class="small text-muted mb-1">Just now</p>
		</div>
	</a>
</li>
{% endfor %}

